<% @recipes.each do |recipe| %>
  <div id="recipe-<%= recipe.id %>">
    <%= render partial: 'recipes', locals: { recipe: recipe} %>
    <%= link_to 'Aprovar', approve_recipe_path(recipe), method: :post, class: 'btn btn-success' %>
    <%= link_to 'Rejeitar', reject_recipe_path(recipe), method: :post, class: 'btn btn-danger' %>
  </div>
<% end %>